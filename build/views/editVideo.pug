extends layout/main

block content  
    .form-container
        form(action=routes.editVideo(video.id), method="post")
            input(type="text", placeholder="Title", name="title", value=video.title, required=true)
            textarea(name="description", placeholder="Description", required =true, rows="5")=video.description
            input(type="submit", value="Update Videos")
        a.form-container__link(href=routes.deleteVideo(video.id))
            button.delete__button Delete Video 